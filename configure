# -*-Makefile-*-
#!/bin/bash

set -ev

if [ "$(uname)" == "Darwin" ]; then
    BIT_LIB=libddstubs.dylib
elif [ "$(uname -s)" == "Linux" ]; then
    BIT_LIB=libddstubs.so
fi

pushd &> /dev/null
cd bit
rm -Rf build
mkdir build
cd build
cmake ..
make
if [ "$(uname)" == "Darwin" ]; then
    cp ${BIT_LIB} /usr/local/lib
elif [ "$(uname -s)" == "Linux" ]; then
    sudo cp ${BIT_LIB} /usr/local/lib
fi

